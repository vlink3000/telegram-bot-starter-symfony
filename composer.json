{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "illuminate/database": "^7.13",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/dotenv": "5.0.*",
        "symfony/framework-bundle": "5.0.*",
        "symfony/yaml": "^5.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "autoload": {
        "psr-4": {
            "Telegram\\Bot\\Skeleton\\": "src/"
        }
    },
    "extra": {
        "src-dir": "src/Application"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-phpbrowser": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "scripts": {
        "server": "cd public && php -S localhost:7007"
    }
}
